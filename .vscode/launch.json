{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Wokwi GDB",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/target/riscv32imc-unknown-none-elf/debug/serial-logger",
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "miDebuggerPath": "gdb-multiarch",
      "args": [
        "set arch riscv:rv32"
      ],
      "miDebuggerServerAddress": "localhost:3333"
    }
  ]
}